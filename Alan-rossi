    <script>
        // Floating Action Button
        const floatingButton = document.querySelector('.floating-button');
        const floatingMenu = document.querySelector('.floating-menu');

        floatingButton.addEventListener('click', function() {
            floatingMenu.classList.toggle('active');
            if (floatingMenu.classList.contains('active')) {
                floatingButton.innerHTML = '<i class="fas fa-times"></i>';
            } else {
                floatingButton.innerHTML = '<i class="fas fa-plus"></i>';
            }
        });

        // Pulse Animation on Scroll
        const pulseElements = document.querySelectorAll('.pulse-on-scroll');
        const timeline = document.querySelector('.timeline');
        const timelineItems = document.querySelectorAll('.timeline-item');

        function checkPulse() {
            pulseElements.forEach(element => {
                const elementPosition = element.getBoundingClientRect().top;
                const screenPosition = window.innerHeight / 1.2;

                if (elementPosition < screenPosition) {
                    element.classList.add('active');
                }
            });
            
            // Timeline animation
            const timelinePosition = timeline.getBoundingClientRect().top;
            if (timelinePosition < window.innerHeight / 1.2) {
                timeline.classList.add('animated');
            }
            
            // Timeline items animation
            timelineItems.forEach(item => {
                const itemPosition = item.getBoundingClientRect().top;
                if (itemPosition < window.innerHeight / 1.1) {
                    item.classList.add('active');
                }
            });
        }

        window.addEventListener('scroll', checkPulse);
        checkPulse(); // Check on load

        // Benefits slider animation handling
        const benefitsTrack = document.querySelector('.benefits-track');
        
        // Handle auto-animation behavior
        benefitsTrack.addEventListener('mouseenter', () => {
            benefitsTrack.style.animationPlayState = 'paused';
        });
        
        benefitsTrack.addEventListener('mouseleave', () => {
            benefitsTrack.style.animationPlayState = 'running';
        });
    </script>
